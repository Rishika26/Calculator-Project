<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="50sp"
        android:layout_weight="2"
        android:hint="0"
        android:gravity="center|end"
        android:padding="10dp"
        android:maxLength="15"
        android:background="#000"
        android:textColorHint="#fff"
        android:id="@+id/input"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:layout_weight="1"
        android:gravity="center|end"
        android:padding="10dp"
        android:background="#000"
        android:textColorHint="#fff"
        android:id="@+id/sign"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:onClick="log"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="log"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

        <Button
            android:onClick="ln"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="ln"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

        <Button
            android:onClick="power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="x^n"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

        <Button
            android:onClick="root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/square_root"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

        <Button
            android:onClick="factorial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="!"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            />

        <Button
            android:onClick="sin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="sin"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

        <Button
            android:onClick="cos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="cos"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

        <Button
            android:onClick="tan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="tan"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:onClick="btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="7"
                android:textColor="#fff"
                android:textSize="30sp"
                android:background="#000"/>

            <Button
                android:onClick="btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="8"
                android:textColor="#fff"
                android:textSize="30sp"
                android:background="#000"/>

            <Button
                android:onClick="btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="9"
                android:textColor="#fff"
                android:textSize="30sp"
                android:background="#000"/>

            <Button
                android:onClick="add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:background="#000"/>

            <ImageButton
                android:onClick="delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/ic_baseline_backspace_24"
                android:background="#000"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:onClick="btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="4"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#000"/>

        <Button
            android:onClick="btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="5"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#000"/>

        <Button
            android:onClick="btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="6"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#000"/>

        <Button
            android:onClick="subtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:background="#000"/>

        <Button
            android:onClick="clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="C"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#000"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:onClick="btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:background="#000"/>

                <Button
                    android:onClick="btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:background="#000"/>

                <Button
                    android:onClick="btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:background="#000"/>

                <Button
                    android:onClick="multiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="*"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:background="#000"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000"/>

                <Button
                    android:onClick="btn0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_weight="1"
                    android:background="#000"
                    android:textColor="#fff"
                    android:text="0"
                    android:textSize="30sp"/>

                <Button
                    android:onClick="dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_weight="1"
                    android:background="#000"
                    android:textColor="#fff"
                    android:text="."
                    android:textSize="30sp"/>

                <Button
                    android:onClick="divide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="/"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:background="#000"/>



    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="vertical">

            <Button
                android:onClick="equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="="
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:background="#000"/>
        </LinearLayout>

        </LinearLayout>
</LinearLayout>